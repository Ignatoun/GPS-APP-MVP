<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Crane" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/colorPrimaryCraneBackground</item>
        <item name="colorPrimary">@color/colorPrimaryCraneBackground</item>
        <item name="colorPrimaryDark">@color/colorPrimaryVariantCrane</item>
        <item name="colorAccent">@color/colorSecondaryCrane</item>
        <item name="android:textColor">#FFFFFF</item>
<!--        <item name="fontFamily">@font/raleway_regular</item>-->
        <item name="fontFamily">@font/worksans_regular</item>
    </style>

    <style name="ButtonCraneStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
<!--        <item name="fontFamily">@font/raleway_semi_bold</item>-->
        <item name="fontFamily">@font/worksans_semibold</item>
    </style>

    <style name="EditTextCraneStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:visibility">visible</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#FFFFFF</item>
    </style>

</resources>